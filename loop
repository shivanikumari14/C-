//print hello world(using for loop)
#include<stdio.h>
int main(){
    for(int i=1; i<=5; i++ ){
        printf("Hello world\n");
    }
    return 0;
}

//print 1 to 100(using for loop)
#include<stdio.h>
int main(){
    for(int i=1; i<=100; i++ ){
        printf("%d \n" , i);
    }
    return 0;
}

//print 10 to 1(using for loop)
#include<stdio.h>
int main(){
    for(int i=10; i>=1; i-- ){
        printf("%d \n" , i);
    }
    return 0;
}

//print 0 to 10(using for loop)
#include<stdio.h>
int main(){
    for(int i=0; i<=10; i++ ){
        printf("%d \n" , i);
    }
    return 0;
}

//print 0 to 10(using for loop)
#include<stdio.h>
int main(){
    for(int i=0; i<=10; i++ ){
        printf("%d \n" , i);
    }
    return 0;
}


//print 0 to 10(using while loop)
#include<stdio.h>
int main(){
    int i = 0;
    while(i <= 10){
        printf("%d \n" ,i);
        i++;
    }
    return 0;
}

//print the number from o to n, if n is given by user.
using while loop
#include<stdio.h>
int main(){
    int n;
    printf("enter the number :");
    scanf("%d" ,&n);

    int i = 0;
    while(i <= n) {
        printf("%d \n" ,i);
        i++;
    } 
    return 0;
}

using for loop
#include<stdio.h>
int main(){
    int n;
    printf("enter the number :");
    scanf("%d" ,&n);

    for(int i=0; i <= n; i++) {
        printf("%d \n" , i);
    }
    return 0;
}


//print 1 to 5 using do while loop
#include<stdio.h>
int main(){
    int i = 1;
    do{
        printf("%d \n", i);
        i++;
    }while(i <= 5);
    return 0;
}

// print 5 to 1 using do while loop
#include<stdio.h>
int main(){
    int i = 5;
    do{
        printf("%d \n", i);
        i--;
    }while(i >= 1);
    return 0;
}

//print the sum of first n natural numbers(using for loop)
#include<stdio.h>
int main(){
    int n;
    printf("enter the number:");
    scanf("%d" , &n);

    int sum = 0;

    for(int i = 1; i <= n; i++){
        sum += i;
    }
    printf("sum is %d \n" ,sum);

     for(int i=n; i>=1; i--) {  //print them in reverse
        printf("%d \n",i);
    }
    return 0;
}

// print the table of any number using for loop
#include<stdio.h>
int main(){
    int n;
    printf("enter the number :");
    scanf("%d" ,&n);

    for(int i=1; i<=10; i++){
        printf("%d \n" ,n*i);
    }
    return 0;
}

// keep taking numbers as input from user until user enter an odd numbers(using do while)
#include<stdio.h>
int main(){
    int n;
    do{
        printf("enter number :");
        scanf("%d" ,&n);
        printf("%d \n" ,n);

        if(n%2 != 0){
            break;
        }
    }while(1);
    printf("thank you");
    return 0;
}



#include<stdio.h> //using for loop
int main(){
    int n;
    for(;;){
        printf("enter number :");
        scanf("%d",&n);
        printf("%d \n",n);

        if(n%2 != 0){
            break;
        }
    }
    printf("thank you");
    return 0;
}

#include<stdio.h> //using while loop
int main(){
    int n;
    printf("enter number :");
    scanf("%d",&n);

    while(1){
        printf("%d \n",n);

        if(n%2 != 0){
            break;
        }

        printf("enter number :");
        scanf("%d",&n);
    }
    printf("thank you");
    return 0;
}

//print all the odd numbers from 5 to 50
#include<stdio.h>
int main(){
    for(int i=5; i<=50; i++){
        if(i % 2 != 0){ //odd
            printf("%d\n",i);
        }
    }
    return 0;
}

#include<stdio.h>
int main(){
    for(int i=5; i<=50; i++){
        if(i % 2 == 0){ //even
            continue;
        }
        printf("%d\n",i);
    }
    return 0;
}


